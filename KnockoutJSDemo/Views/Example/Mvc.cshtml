@model KnockoutJSDemo.Models.Person
           
@{
    ViewBag.Title = "Mvc";
}

@{
    ViewBag.Title = "Hello World";
}

@section JavaScript{
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script type="text/javascript">

    var viewModel = {
        firstName: ko.observable("@Model.FirstName"),
        lastName: ko.observable("@Model.LastName")
    };
    ko.applyBindings(viewModel);
    
    
</script>
}

<h1>ASP.NET MVC Integration</h1>
@using(Html.BeginForm()){
    <div>
        First Name:  @Html.TextBoxFor(m => m.FirstName, new{data_bind = " value: firstName, valueUpdate : 'afterkeydown'"}) 
                     @Html.ValidationMessageFor(m=>m.FirstName)<br />

        Last Name:  @Html.TextBoxFor(m => m.LastName, new{@class="required",data_bind = " value: lastName, valueUpdate : 'afterkeydown'"}) 
                    @Html.ValidationMessageFor(m => m.LastName)<Br />
        <input type="submit" name="btnSubmit" value="Save" />
   </div>
}
<div>
    <h2>Details:</h2>
    <hr />
    <span data-bind=" text : firstName"></span> 
    <br />
    <input type="text"  data-bind="value : lastName" />
</div>
